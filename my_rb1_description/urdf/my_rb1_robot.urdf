<?xml version="1.0" ?>

<robot name="my_rb1_robot" xmlns:xacro="http://www.ros.org/wiki/xacro">

    <!-- Link - link_footprint -->
    <link name="link_footprint">
        <inertial>
            <mass value="0" />
            <origin xyz="0 0 0" rpy="0 0 0" />
            <inertia ixx="0" ixy="0" ixz="0" iyy="0" iyz="0" izz="0" />
        </inertial>
    </link> 

    <!-- joint base / foot_print -->
    <joint name="joint_base_link_footprint" type="fixed">
        <origin rpy="0 0 0" xyz="0 0 0" />
        <child link="base_link" />
        <parent link="link_footprint" />
        <axis rpy="0 0 0" xyz="0 0 0" />
        <limit effort="10000" velocity="1000" />
        <joint_properties damping="0" friction="0" />
    </joint> 
    

    <!-- Link - base -->
    <link name="base_link">
        <inertial>
            <mass value="${base_mass}" />
            <origin xyz="0 0 0.3" rpy="0 0 0" />
            <inertia ixx="0.4625" ixy="0" ixz="0" iyy="0.4625" iyz="0" izz="0.625" />
        </inertial>

        <collision>
            <geometry>
                <cylinder length="0.3" radius="0.25"/>
            </geometry>
        </collision>

        <visual>
            <geometry>
                <cylinder length="0.3" radius="0.25"/>
            </geometry>
            <material name="Blue">
                <color rgba="0.203125 0.23828125 0.28515625 0.5" /> 
            </material>
        </visual>
    </link>

                    <!-- joint base / Front Caster -->
    <joint name="joint_base_front_caster" type="fixed">
        <origin rpy="0 0 0" xyz="-0.1 0.0 -0.15" />
        <child link="front_caster" />
        <parent link="base_link" />
        <axis rpy="0 0 0" xyz="1 0 0" />
        <limit effort="10000" velocity="1000" />
        <joint_properties damping="0" friction="0" />
    </joint>
                    <!-- Link Front Caster -->
    <link name="front_caster">
        <inertial>
            <mass value="1" />
            <origin xyz="0 0 0" rpy="0 0 0" />
            <inertia ixx="0.000625" ixy="0" ixz="0" iyy="0.0004625" iyz="0" izz="0.0004625"/>
        </inertial>
        <collision>
            <origin rpy="${pi/2} 0 0" xyz="0 0 0" />
            <geometry>
                <sphere radius="0.025"/>
            </geometry>
        </collision>
        <visual>
            <origin rpy="${pi/2} 0 0" xyz="0 0 0" />
            <geometry>
                 <sphere radius="0.025"/>
            </geometry>
            <material name="Blue">
                <color rgba="0.2 0.2 0.4 1" />
            </material>
        </visual>
    </link>
    
                    <!-- joint base / Rear Caster -->
    <joint name="joint_base_rear_caster" type="fixed">
        <origin rpy="0 0 0" xyz="0.1 0.0 -0.15" />
        <child link="rear_caster" />
        <parent link="base_link" />
        <axis rpy="0 0 0" xyz="1 0 0" />
        <limit effort="10000" velocity="1000" />
        <joint_properties damping="0" friction="0" />
    </joint>
                    <!-- Link Rear Caster -->
    <link name="rear_caster">
        <inertial>
            <mass value="1" />
            <origin xyz="0 0 0" rpy="0 0 0" />
            <inertia ixx="0.000625" ixy="0" ixz="0" iyy="0.0004625" iyz="0" izz="0.0004625"/>
        </inertial>
        <collision>
            <origin rpy="${pi/2} 0 0" xyz="0 0 0" />
            <geometry>
                <sphere radius="0.025"/>
            </geometry>
        </collision>
        <visual>
            <origin rpy="${pi/2} 0 0" xyz="0 0 0" />
            <geometry>
                 <sphere radius="0.025"/>
            </geometry>
            <material name="Blue">
                <color rgba="0.2 0.2 0.4 1" />
            </material>
        </visual>
    </link>

    <!-- Joint - base / left wheel -->
    <joint name="joint_base_left_wheel" type="continuous">
        <origin rpy="0 0 0" xyz="0 -0.2 -0.15" />
        <child link="left_wheel" />
        <parent link="base_link" />
        <axis rpy="0 0 0" xyz="0 1 0" />
        <limit effort="10000" velocity="1000" />
        <joint_properties damping="1.0" friction="1.0" />
    </joint>
    <!-- Link - left wheel -->
    <link name="left_wheel">
        <inertial>
            <mass value="1" />
            <origin xyz="0 0 0" rpy="0 0 0" />
            <inertia ixx="0.000625" ixy="0" ixz="0" iyy="0.0004625" iyz="0" izz="0.0004625"/>
        </inertial>

        <!-- Tires -->
        <collision>
            <origin rpy="${pi/2} 0 0" xyz="0 0 0" />
            <geometry>
                <cylinder length="0.03" radius="0.025"/>
            </geometry>
        </collision>
        <visual>
            <origin rpy="${pi/2} 0 0" xyz="0 0 0" />
            <geometry>
                <cylinder length="0.03" radius="0.025"/>
            </geometry>
            <material name="Red">
                <color rgba="1 0 0 1" />
            </material>
        </visual>
     </link>

    <!-- Joint - base / right wheel -->
    <joint name="joint_base_right_wheel" type="continuous">
        <origin rpy="0 0 0" xyz="0 0.2 -0.15" />
        <child link="right_wheel" />
        <parent link="base_link" />
        <axis rpy="0 0 0" xyz="0 1 0" />
        <limit effort="10000" velocity="1000" />
        <joint_properties damping="1.0" friction="1.0" />
    </joint>
    <!-- Link - right wheel -->
    <link name="right_wheel">
        <inertial>
            <mass value="1" />
            <origin xyz="0 0 0" rpy="0 0 0" />
            <inertia ixx="0.000625" ixy="0" ixz="0" iyy="0.0004625" iyz="0" izz="0.0004625"/>
        </inertial>

        <!-- Tires -->
        <collision>
            <origin rpy="${pi/2} 0 0" xyz="0 0 0" />
            <geometry>
                <cylinder length="0.03" radius="0.025"/>
            </geometry>
        </collision>
        <visual>
            <origin rpy="${pi/2} 0 0" xyz="0 0 0" />
            <geometry>
                <cylinder length="0.03" radius="0.025"/>
            </geometry>
            <material name="Red">
                <color rgba="1 0 0 1" />
            </material>
        </visual>
    </link>

    <!-- Laser scan -->
    <joint name="joint_front_laser" type="fixed">
        <origin rpy="${pi} 0 0" xyz="0.25 0 0.075" />
        <child link="front_laser" />
        <parent link="base_link" />
        <joint_properties damping="0" friction="0" />
    </joint>
    <link name="front_laser">
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <mass value="1" />
            <inertia ixx="0.000252666666667" ixy="0" ixz="0" iyy="0.000252666666667" iyz="0" izz="0.0005"/>
        </inertial>
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <cylinder radius="0.075" length="0.10"/>
            </geometry>
            <material name="Green">
                <color rgba="0.0 0.8 0.0 1.0" />
            </material>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="0.075" length="0.10"/>
            </geometry>
        </collision>
    </link>
</robot>
